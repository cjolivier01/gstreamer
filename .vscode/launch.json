  "version": "0.2.0",
  "configurations": [
    {
      "name": "GStreamer - Build and debug",
      "request": "launch",
      "type": "cppdbg",
      "linux": {
        "MIMode": "gdb",
        "envFile": "${workspaceFolder}/${config:mesonbuild.buildFolder}/meson-vscode.env",
      },
      "cwd": "${workspaceFolder}/${config:mesonbuild.buildFolder}/subprojects/gstreamer/tools/",
      "program": "${workspaceFolder}/${config:mesonbuild.buildFolder}/subprojects/gstreamer/tools/gst-launch-1.0",
      "args": [
        "playbin",
        "uri=file:///olivier-pool/Videos/ev-bs-short/GX010085.MP4"
        //"videotestsrc",
        //"fakevideodec",
        //"!",
        //"autovideosink"
        //"fakesink",
      ],
      "environment": [
        {
          "name": "GST_DEBUG",
          "value": "*:4"
        },
      ],
      "stopAtEntry": false,
      "preLaunchTask": "Meson: Build all targets",
      "symbolOptions": {
        "searchPaths": [
          "${workspaceFolder}/${config:mesonbuild.buildFolder}",
        ],
        "searchMicrosoftSymbolServer": true,
        "cachePath": "${workspaceFolder}\\${config:mesonbuild.buildFolder}\\vscode-symbols-cache",
        "moduleFilter": {
          "mode": "loadAllButExcluded",
          "excludedModules": []
        }
      }
    },
    {
      "name": "(LLDB) GStreamer - Build and debug",
      "type": "lldb",
      "request": "launch",
      "linux": {
        "envFile": "${workspaceFolder}/${config:mesonbuild.buildFolder}/meson-vscode.env",
      },
      "cwd": "${workspaceFolder}/${config:mesonbuild.buildFolder}/subprojects/gstreamer/tools/",
      "program": "${workspaceFolder}/${config:mesonbuild.buildFolder}/subprojects/gstreamer/tools/gst-launch-1.0",
      "args": [
        "playbin",
        "uri=file:///olivier-pool/Videos/ev-bs-short/GX010085.MP4"
        //"videotestsrc",
        //"fakevideodec",
        //"!",
        //"autovideosink"
        //"fakesink",
      ],
      "env": {
        "GST_DEBUG": "5",
        // "LD_LIBRARY_PATH": "/home/colivier/mambaforge/envs/ubuntu/lib/x86_64-linux-gnu",
      },
      "preLaunchTask": "Meson: Build all targets",
    }
  ]
}
